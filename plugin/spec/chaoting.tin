#alias {attack} {
    #class attack.inner open;
    #class attack.inner close;

    #if {"${quest}" == "hb"} {
        #class attack.inner open;
        #class attack.inner close;
    };
    #elseif {${mj_started}  == 1} {
        pfm zuoshou;
        #class attack.inner open;
        #ticker {qixing} {
            pfm qixing;
        } {1.8};
        #ticker {perf_zuoshou} {
            pfm zuoshou;
        } {2.8};
        #class attack.inner close;
    };
    #else {
        #if {${xf.type} == -1 || ${xf.type} == 1} {
            #var jiali_count max;
            pfm beng;
            #class attack.inner open;
            #ticker {beng} {
                pfm beng;
            } {2.8};
            #ticker {zuoshou} {
                pfm zuoshou;
            } {3.8};
            #class attack.inner close;
        };
        #elseif {${xf.type} == 2} {
            pfm beng;
            #class attack.inner open;
            #ticker {beng} {
                pfm beng;
            } {2.8};
            #class attack.inner close;
        };
        #elseif {${xf.type} == 3} {
            pfm beng;
            #class attack.inner open;
            #class attack.inner close;
        };
        #else {
            pfm beng;
            #class attack.inner open;
            #class attack.inner close;
        };
    };
};

