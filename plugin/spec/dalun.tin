        };
        #else {
            #class attack.inner open;
            #class attack.inner close;

            #if {${xf.type} == 1} {
                pfm wushuai;
                #class attack.inner open;
                #ticker {wushuai} {
                    pfm wushuai;
                } {5.8};
                #class attack.inner close;
            };
            #elseif {${xf.type} == 2} {
                pfm wushuai;
                #class attack.inner open;
                #ticker {wushuai} {
                    pfm wushuai;
                } {5.8};
                #class attack.inner close;
            };
            #elseif {${xf.type} == 3} {
                #if {${xf_slowdown} == 0} {
                    pfm ran;
                };
            };
            #elseif {${xf.type} == 4} {
                #if {${xf_slowdown} == 0} {
                    pfm ran;
                };
            };
        };
    };
    #else {
        pfm wushuai;
        #class attack.inner open;
        #ticker {wushuai} {
            pfm wushuai;
        } {6.8};
        #class attack.inner close;
    };
};

