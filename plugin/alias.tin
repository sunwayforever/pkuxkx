#alias {get_char_info} {
    #show INFO: 获取角色信息;
    #alias get_char_info_action #cr;
    #alias get_char_info_action %1;

    #class get_char_info.inner open;
    #action {【%*】%*(%*)} {
        #var char_id @lower{%%3};
    };
    #gag 你是朝廷第;
    #action {你是朝廷%*} {
        #showme 你是朝廷第;
    };
    #action {你是%*第} {
        #var char_menpai_zh %%1;
        #var char_menpai @mapget{menpai;%%1};
        load spec/${char_menpai};
        #var weapons_to_wield ${my_weapons_to_wield};
    };
    #action {≡━━━━━━━━━━━━━━━━━━━━━━◎%*侠客行◎━━≡} {
        #class get_char_info.inner kill;

        #class get_name.inner open;
        #action {姓    名：	%*} {
            #var real_char_name %%%1;
        };
        #class get_name.inner close;

        #class get_st.inner open;
        #action {　姓名：　%S%s 　ＩＤ} {
            #var char_name %%%1;
            update_status;
            get_char_info_action;
        };
        #action {姓名:%*%sID:%S} {
            #var char_name %%%1;
            update_status;
            get_char_info_action;
        };
        #action {内力恢复  　%d.%d  } {
            #var char_nl_recovery %%%1;
        };
        #action {内力恢复：+%* } {
            #var char_nl_recovery %%%1;
        } {3};
        #action {内力恢复：+%*.%* } {
            #var char_nl_recovery %%%1;
        } {2};
        #action {系统喘气中} {
            #delay {10} {
                #send {status_me};
            };
        };
        #action {≡━━━━━━━━━━━━━━━━━━━━━━━◎%*侠客行◎━━≡} {
            #class get_st.inner kill;
        };
        #class get_st.inner close;
        on_unbusy {
            #send {finger ${char_id}};
            #send {status_me};
        };
    };
    #class get_char_info.inner close;
    on_unbusy {
        #send {sc};
    };
};

#alias {startup} {
    #action {张 三双手抱拳，对着%*${char_name}作了个揖道} {
        notify 张三;
    };
    #action {${char_name}(damage:%*气血:%*)} {
        #if {${fighting} == 0} {
            war;
        };
    };
    #show INFO: 检查负重;
    #send {i};
    #send {hpbrief};
    #send {time};
    init_set;
    xmpp.start;
    #show INFO: 检查保卫;
    check_baowei;
    #show INFO: 检查环境变量;
    update_env;
    #show INFO: 检查气血;
    check_health;
    #delay {3} {
        #send {uptime};
        check_fm;
        #show INFO: 检查武器;
        weapons.check;
    };
    #delay {4} {
        #if {${need_reload} == 1} {
            #show INFO: 需要重新加载武器;
        };
        #else {
            #showme reloaded;
            #show INFO: 装备武器并检查耐久;
            wi;
            we;
            check_naijiu;
        };
        #show INFO: 检查特技;
        pfm_special;
        #show INFO: 检查武功设置;
        #send {jifa};
        reborn;
        #delay {2} {
            #showme INFO: 自动 login 完成;
            show.init;
            on_unbusy {
                post_login;
            };
        };
    };
};

