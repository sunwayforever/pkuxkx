#alias {pfm_special} {
    #class pfm_special.inner open;
    #action {你现在会以下这些特技：} {
        #action {%S(%S)} {
            #if {"%%%2" == "might"} {
                might;
                #ticker {pfm_might} {
                    might;
                } {300};
            };
            #else {
                on_unbusy {
                    special %%%2;
                };
            };

            #if {"%%%2" == "chainless"} {
                load chainless;
            };
            #elseif {"%%%2" == "perceive"} {
                load pp;
            };
            #elseif {"%%%2" == "sociability"} {
                #alias {gps.clear} {
                    #nop %%%%1;
                    gps.run;
                };
            };
        };
        on_echo {
            #unaction {%S(%S)};
            #class pfm_special.inner kill;
        };
    };
    #class pfm_special.inner close;
    special;
};

